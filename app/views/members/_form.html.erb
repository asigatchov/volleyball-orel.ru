<%= form_for(member, html: { multipart: true }) do |f| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
     <%= f.label 'Команда' %>
     <%=  f.select(:team_id, @teams_arr , {selected: params[:team_id] },  class: "form-control" ) %>

 </div>
  <div class="form-group">
    <%# f.input :photo, as: :file %>
     <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :birthday %>
    <%= f.text_field :birthday, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :pos %>
    <%= f.number_field :pos, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :active %>
    <%= f.check_box :active, class: "form-control" %>
  </div>

  <div class="actions">
      <%= f.submit 'Сохранить', class: "btn btn-default" %>
  </div>
</div
<% end %>
