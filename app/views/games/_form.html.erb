<%= simple_form_for(@game) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_at %>
    <%= f.input :place_name %>
    <%= f.input :team_a , collection: Team.all %>
    <%= f.input :team_b , collection: Team.all  %>
    <%= f.input :member_a,  collection: Member.where(team_id: @game.team_a) %>
    <%= f.input :member_b,  collection: Member.where(team_id: @game.team_b) %>
    <%= f.input :score_a %>
    <%= f.input :score_b %>
    <%= f.input :full_score %>
    <div class="form-group">
      <%= f.label 'Перенос игры' %>
      <%= f.check_box :rescheduled,  class: "form-control"  %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
