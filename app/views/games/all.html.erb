<% @games.each do |game| %>
<div class="row">
<div class="col-md-8">
<i><b><%=   I18n.localize( game.start_at , :format => :long ) %></b></i>  <b>Место:</b> <%= game.place_name %>  </br>
<%= game.team_one.title %> - <%= game.team_two.title %>
<% if game.score_a && game.score_b %>
Счет: <b><%= game.score_a %>- <%= game.score_b %></b> (<%= game.full_score %>)
<% end %>
</div>
<div  class="col-md-4">

          <% if is_admin?  %>
            <%= link_to 'Show', game %><br>
            <%= link_to 'Edit', edit_game_path(game) %><br>
            <%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
          <% end %>
</div>
</div>

<% end %>
