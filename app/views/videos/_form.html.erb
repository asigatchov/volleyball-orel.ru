<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :team_a , collection: Team.all %>
    <%= f.input :team_b , collection: Team.all  %>
    <%= f.input :tournament_id,  collection: Tournament.active %>
    <%= f.input :youtube_id %>
    <%= f.input :image %>
      <div class="form-group">
        <%= f.label 'Опубликовать?' %>
        <%= f.check_box :active,  class: "form-control"  %>
  </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>