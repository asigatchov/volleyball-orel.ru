<% if is_admin?  %>
  <%= link_to 'Создать новый турнир', new_tournament_path %>
<% end %>

<h1>Список мероприятий проведенных ОВЛ</h1>


<% @tournaments.each do |tournament|  %>
<div class="row">
<div class="col-md-8"><%= link_to tournament.title, tournament_url(tournament), class: 'h4' %></div>
    <% if is_admin?  %>
    <div class="col-md-4">
        <%= link_to 'Edit', edit_tournament_path(tournament) %>
        <%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>
</div>    
<div class="row">
<div class="col-md-8">&nbsp;</div>
</div>
<% end %>
