<%= simple_form_for(@tournament) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <div class="form-group">
        <%= f.label 'Опубликовать?' %>
        <%= f.check_box :active,  class: "form-control"  %>
  </div>
 
    <%= f.input :teams,  collection: Team.active ,   input_html: { multiple: true }%> 
</div>

<div class="form-actions">
  <%= f.button :submit, 'Сохранить турнир' %>
</div>
<% end %>
