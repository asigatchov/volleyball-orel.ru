<div class="col-md-<%= is_admin?  ? 10 : 12 -%>  ">
<p id="notice"><%= notice %></p>
<h1><%= @article.title %></h1>
<%=  raw @article.content %>
</div>

<% if is_admin?  %>
  <div class="col-md-2">
  <%= link_to 'Редактировать', edit_article_path(@article) %>
  <%= link_to 'Назад', articles_path %>
  <%= link_to 'Удалить', @article, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
