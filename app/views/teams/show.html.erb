<p id="notice"><%= notice %></p>


  <h1><%= @team.title %></h1>

<p>
  <%= @team.desc.html_safe %>
</p>

  <% @team.members.each do |member| %>
  <div class="row">
  <div  class="col-md-6">
    <%= image_tag member.photo.url(:medium) %>
  </div>
  <div  class="col-md-6">
     <h3><%= member.title %></h3><br/>
     Дата рождения:   <%= member.birthday.strftime("%d.%d.%Y")   %><br/>
     Номер игрока: <b><%= member.pos %></b><br/>
  </div>
  </div>
  <% end %>



<% if is_admin? %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
<% end %>
